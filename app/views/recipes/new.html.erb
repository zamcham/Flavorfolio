<Section class="reg-container ph-10vw">
    <h2>Create a New Recipe</h2>

<%= form_for([current_user, @recipe]) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :preparation_time %>
    <%= f.number_field :preparation_time %>
  </div>

  <div class="field">
    <%= f.label :cooking_time %>
    <%= f.number_field :cooking_time %>
  </div>

  <div class="field">
    <%= f.label :public %>
    <%= f.check_box :public %>
  </div>

  <div class="actions">
    <%= f.submit "Create Recipe" %>
  </div>
<% end %>
</Section>