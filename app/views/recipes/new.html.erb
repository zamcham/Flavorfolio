<Section class='new-recipe-page ph-10vw'>

  <div class="login-column-l">
    <%= image_tag 'newRecipe.jpg', alt: 'new recipe' %>
  </div>
  <div class="login-column-r">
    <div class="text">
      <h2>Add Recipe</h2>
      <p>Fill the fields below to continue</p>
    </div>
    <%= form_for([current_user, @recipe]) do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <div class="field">
        <%= f.label :preparation_time %>
        <%= f.number_field :preparation_time %>
      </div>

      <div class="field">
        <%= f.label :cooking_time %>
        <%= f.number_field :cooking_time %>
      </div>

      <div class="field">
        <%= f.label :public %>
        <%= f.check_box :public %>
      </div>

      <div class="actions">
        <%= f.submit "Create Recipe" %>
      </div>
    <% end %>
  </div>
</Section>